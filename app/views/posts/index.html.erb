
<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-user-name">
          <%= link_to(post.user.name, "/profiles/#{post.user.id}") %>
        </div>
        <p>
          タイトル:
          <%=post.title %>
        </p>
        <p>
          概要:
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </p>
        <p>
          募集人数:
          <%= post.NumApplicants %>
          人
        </p>
        <p>
          開始日:
          <%= post.start_date %>
          ~
          終了日:
          <%= post.end_date %>
        </p>
        <p>
          募集終了まで残り: 日付の加減をする必要あり  
        </p>
      </div>
    <% end %>
  </div>
</div>