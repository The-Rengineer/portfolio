<!DOCTYPE html>
<html>
  <head>
    <title>portfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("ポートフォリオ", "/")%>
      </div>
      <ul class="header-menus">
        <% if session[:user_id] %>
          <li>
            <%= link_to("#{session[:name]}さん") =%>
          </li>
          <li>
            <%= link_to("案件を探す", "/posts/index") %>
          </li>
          <li>
            <%= link_to("メンバーを募集する", "/posts/new") %>
          </li>
          <li>
            <%= link_to("プロフィール", "/profiles/#{session[:user_id]}") %>
          </li>
          <li>
            <%= link_to("いいねした投稿", "/likes/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/users/logout", {method: "post"})%>
          </li>
        <% else %>
          <li>
            <%= link_to("ログイン", "/users/login_form")%>
          </li>
          <li>
            <%= link_to("新規登録", "/users/new") %>
          </li>
        <% end %>
      </ul>
      
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
