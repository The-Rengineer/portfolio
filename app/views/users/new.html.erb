<div class="form users-form pt-40 h-screen">
  <div class="form-body flex justify-center">
    <!-- form_tagメソッドを用いて、データの送信先を指定してください -->
    <%= form_tag("/users/create") do %>
      <p>ユーザー名</p>
      <!-- name属性を設定してください -->
      <input name="name" class="border-solid border-2 border-indigo-600">
      <p>メールアドレス</p>
      <!-- name属性を設定してください -->
      <input name = "email" class="border-solid border-2 border-indigo-600">
      <p>パスワード</p>
      <input type="password" name= "password" class="border-solid border-2 border-indigo-600">
      <p>確認用パスワード</p>
      <input type="password" name= "confirmPassword" class="border-solid border-2 border-indigo-600">
      <div class="mt-3 flex justify-center">
        <input type="submit" value="新規登録" class="rounded-full border-solid border-2 border-indigo-600 hover:border-dotted p-1">
      </div>
    <!-- end を追加してください -->
    <% end %>
  </div>
</div>

